<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.NoActionBar"/>

    <style name="AppThemeCompact" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KeepFocus.WithActionBar.Common" parent="@android:style/Theme.DeviceDefault.Light"/>

    <style name="CustomizeActionbarAppTheme" parent="KeepFocus.WithActionBar.Common">
        <item name="android:actionBarStyle">@style/MainActionBarTheme</item>
    </style>

    <style name="MainActionBarTheme" parent="android:Widget.DeviceDefault.ActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:background">@color/main_action_bar_bg</item>
        <item name="android:height">@dimen/main_action_bar_height</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textStyle">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">15dp</item>
    </style>
    
    <style name="title_text_style">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="button_text_style">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="content_text_style">
        <item name="android:textColor">@color/content_text_color</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
<!--
        <item name="android:typeface">monospace</item>
-->
    </style>

    <style name="no_item_text_style">
        <item name="android:textSize">@dimen/no_item_text_size</item>
        <item name="android:textColor">@color/no_item_text_color</item>
    </style>
    <style name="textView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#505050</item>
<!--        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/title_text_color</item>-->
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
    </style>

    <style name="textTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">18dp</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
    </style>

    <style name="imageView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="dialog_body_text_style">
        <item name="android:textSize">@dimen/alert_dialog_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/alert_dialog_text_line_spacing_extra</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>


    <style name="DetailActivityTheme" parent="KeepFocus.WithActionBar.Common">
        <item name="android:actionBarStyle">@style/MainActionBarTheme</item>
        <item name="android:actionMenuTextColor">@color/main_action_bar_menu_title_color</item>
    </style>
    <style name="ActionTitleTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main_action_bar_title_color</item>
        <item name="android:textSize">@dimen/main_action_bar_title_text_size</item>
    </style>
    <style name="list_title_text_style">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/PauseDialogTitle</item>
    </style>
    <style name="PauseDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
