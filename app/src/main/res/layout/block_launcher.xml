<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_screen"
    android:orientation="vertical" >

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="@dimen/activity_horizontal_margin"
     android:layout_marginRight="@dimen/activity_horizontal_margin"
     android:layout_centerInParent="true"
     android:orientation="vertical"
     >
     <TextView
         android:id="@+id/nameAppBlock"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:gravity="center"
         android:layout_centerHorizontal="true"
         android:background="@drawable/btn_join_add_border"
         android:textColor="@color/alert_dialog_text_color"
         android:textSize="@dimen/text_name_app_title_size"
         />

    <ImageView
        android:id="@+id/imageBlock"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_below="@+id/nameAppBlock"
        android:layout_marginTop="40dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_app" />

     <ImageView
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_toRightOf="@+id/imageBlock"
         android:layout_below="@+id/nameAppBlock"
         android:layout_marginLeft="5dp"
         android:layout_marginTop="20dp"
         android:background="@drawable/sleep_icon"
         />

 </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background_button"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d6d6d6" />

        <Button
            android:id="@+id/btn_back"
            style="@style/button_text_style"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginRight="@dimen/horizontal_button_margin"
            android:background="@color/color_background_button"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:text="@string/home" />
    </LinearLayout>

</RelativeLayout>