<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:circle="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Add Member"/>-->
        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/circle_icon_app">
            <Button
                android:id="@+id/scheduler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blocked"
                android:elevation="2dp"
                android:scaleType="centerCrop" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/circle_icon_app">
            <Button
                android:id="@+id/block_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_icon"
                android:elevation="2dp"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Detail"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/circle_icon_app">
            <Button
                android:id="@+id/delete_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/delete_icon"
                android:elevation="2dp"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Delete"/>-->
    </LinearLayout>

</merge>